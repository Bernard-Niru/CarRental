@model CarRental.ViewModels.CombinedViewModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRental.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Custom.css" asp-append-version="true" />
 
</head>
<body>
    @if (ViewData["HideNavbar"] as bool? != true)
    {
        <header>
            @await Html.PartialAsync("/Views/Shared/_LoginRegisterPartial.cshtml", new CarRental.ViewModels.UserViewModel())
            <nav class="navbar navbar-expand-sm Navbar border-bottom box-shadow mb-3">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <h3 class="hotwheelz-heading mb-0">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-logo">
                            <img src="/image/hot-wheels-logo-svg-vector.svg" height="50px" width="auto" />
                        </a>
                    </h3>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="ViewUser">User</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">Sign In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#registerModal">Sign Up</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="swiper">
        <div class="swiper-wrapper">
            @if (Model.TopCars != null && Model.TopCars.Any())
            {
                foreach (var car in Model.TopCars)
                {
                    var img = car.Images.FirstOrDefault()?.ImageBase64;
                    var imageUrl = img != null
                    ? $"data:image/png;base64,{img}"
                    : Url.Content("~/images/road-blue-car-50704.png");

                    <text>
                        <div class="swiper-slide" style="background-image:url('@imageUrl');">
                            <div class="overlay">
                                <h5>@car.CarName</h5>
                                <p>Brand: @car.Brand.BrandName</p>
                                <p>Seats: @car.No_of_Seats</p>
                                <p class="rating-line">Rating: @car.Ratings <span>⭐</span></p>
                                <p>Rent Per day: @car.RentalRate.ToString()</p>
                            </div>
                        </div>
                    </text>
                }
            }
            else
            {
                <p>No top cars found.</p>
            }
        </div>

        <div class="swiper-pagination"></div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CarRental - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
 
    <script>
        <script />


    @section Scripts {
        <script src="~/js/AddCar.js"></script>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/animation.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/Swiper.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
  
</body>
</html>