<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CarRental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRental.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Custom.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm Navbar border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <h3 class="hotwheelz-heading mb-0">
                    <a asp-area="" asp-controller="Customer" asp-action="HomePage" class="nav-logo">
                        <img src="/image/hot-wheels-logo-svg-vector.svg" height="50px" width="auto" />
                    </a>
                </h3>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto d-flex align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Notification">
                                <i class="bi bi-bell-fill fs-5"></i>
                            </a>
                        </li>
                        <li class="nav-item ms-3">
                            <a class="nav-link p-0" asp-area="" asp-controller="Customer" asp-action="Profile" style="display: flex; align-items: center;">
                                <img id="profileImage"
                                     src="@Url.Action("GetProfileImage", "Customer", new { userId = Session.UserID, t = DateTime.Now.Ticks })"
                                     class="rounded-circle shadow-sm"
                                     style="width:40px; height:40px; object-fit:cover;"
                                     alt="Profile Picture" />
                            </a>
                        </li>
                    </ul>


                </div>

            </div>
        </nav>
    </header>




    <div class="content">
        @RenderBody()
    </div>

   
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/animation.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/Swiper.js"></script>
</body>
<@* footer class="bg-dark text-white text-center py-4">
    <p class="mb-1">&copy; 2025 HotWheelz Car Rentals</p>
    <small>Drive your dream car today – reliable, affordable, anywhere</small>
</footer> *@
</html>
