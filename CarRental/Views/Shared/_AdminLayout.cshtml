    <!-- Sidebar -->
    <div class="sidebar bg-dark text-white p-3" style="min-height: 100vh;">
        <div>
            <h4 class="text-white">Menu</h4>

            <a asp-controller="Admin" asp-action="Dashboard"
               class="d-block mb-2 text-white @(currentAction == "Dashboard" ? "active-link" : "")">
                <i class="bi bi-speedometer2 me-2"></i> Dashboard
            </a>

            <a asp-controller="Admin" asp-action="ViewUser"
               class="d-block mb-1 text-white @(currentAction == "ViewUser" ? "active-link" : "")">
                <i class="bi bi-people me-2"></i> Users
            </a>

            <a asp-controller="Admin" asp-action="ViewRequests"
               class="d-block mb-1 text-white @(currentAction == "Request" ? "active-link" : "")">
                <i class="bi bi-person-plus me-2"></i> Request
            </a>

            <a asp-controller="Admin" asp-action="ViewBookings"
               class="d-block mb-1 text-white @(currentAction == "Bookings" ? "active-link" : "")">
                <i class="bi bi-journal-bookmark me-2"></i> Booking
            </a>

            <a asp-controller="Admin" asp-action="ActiveRentals"
               class="d-block mb-1 text-white @(currentAction == "ActiveRental" ? "active-link" : "")">
                <i class="bi bi-car-front me-2"></i> Active Rental
            </a>

            <a asp-controller="Admin" asp-action="RentalHistory"
               class="d-block mb-1 text-white @(currentAction == "RentalHistory" ? "active-link" : "")">
                <i class="bi bi-clock-history me-2"></i> History
            </a>

            <a asp-controller="Admin" asp-action="ViewCars"
               class="d-block mb-2 text-white @(currentAction == "ViewCars" ? "active-link" : "")">
                <i class="bi bi-car-front-fill me-2"></i> Cars
            </a>
        </div>



        <div>
            <hr class="text-secondary" />
            <a href="#" class="text-white d-block mb-2">New Project</a>
            <a href="#" class="text-white d-block mb-2">Profile</a>
            <a href="#" class="text-white d-block" data-bs-toggle="modal" data-bs-target="#signOutModal">Sign Out</a>
        </div>
    </div>
   
    <div class="modal fade" id="signOutModal" tabindex="-1" aria-labelledby="signOutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="signOutModalLabel">Confirm Sign Out</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to sign out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a asp-action="SignOut" asp-controller="Customer" class="btn btn-sm btn-danger">Yes, Sign Out</a>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
