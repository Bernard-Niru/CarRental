@model CarRental.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Add Car";
}

<h2>Add Car</h2>

<form asp-action="AddCar" asp-controller="Admin" method="post">
    <div class="form-group">
        <label asp-for="CarName"></label>
        <input asp-for="CarName" class="form-control" />
        <span asp-validation-for="CarName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BrandID">Brand</label>
        <select asp-for="BrandID" class="form-control" asp-items="ViewBag.BrandList">
            <option value="">-- Select Brand --</option>
        </select>
        <span asp-validation-for="BrandID" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="CarType"></label>
        <select asp-for="CarType" class="form-control" asp-items="ViewBag.CarType">
            <option value="">-- Select Car Type --</option>
        </select>
        <span asp-validation-for="CarType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FuelType"></label>
        <select asp-for="FuelType" class="form-control" asp-items="ViewBag.FuelType">
            <option value="">-- Select Fuel Type --</option>
        </select>
        <span asp-validation-for="FuelType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GearType"></label>
        <select asp-for="GearType" class="form-control" asp-items="ViewBag.GearType">
            <option value="">-- Select Gear Type --</option>
        </select>
        <span asp-validation-for="GearType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color"></label>
        <select asp-for="Color" class="form-control" id="color-select">
            <option value="">-- Select Color --</option>
            <option value="White" style="background-color: white; color: black;">White</option>
            <option value="Black" style="background-color: black; color: white;">Black</option>
            <option value="Red" style="background-color: red; color: white;">Red</option>
            <option value="Blue" style="background-color: blue; color: white;">Blue</option>
            <option value="Silver" style="background-color: silver; color: black;">Silver</option>
            <option value="Gray" style="background-color: gray; color: white;">Gray</option>
            <option value="Green" style="background-color: green; color: white;">Green</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="Color" class="text-danger"></span>

        <input type="text" id="custom-color-input" class="form-control mt-2" placeholder="Enter new color" style="display: none;" />
    </div>



    <div class="form-group">
        <label asp-for="No_of_Seats"></label>
        <input asp-for="No_of_Seats" class="form-control" />
        <span asp-validation-for="No_of_Seats" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="RentalRate"></label>
        <input asp-for="RentalRate" class="form-control" />
        <span asp-validation-for="RentalRate" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Add Car</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
