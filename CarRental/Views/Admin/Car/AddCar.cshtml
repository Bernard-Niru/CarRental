@model CarRental.ViewModels.CarViewModel

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert">
        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <script>
        setTimeout(function () {
            var alert = bootstrap.Alert.getOrCreateInstance(document.getElementById('successAlert'));
            alert.close();
        }, 3000);
    </script>
}

@{
    ViewData["Title"] = "Add Car";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Title -->
<h2 class="mb-4 text-center text-gradient fw-bold">
    <i class="fas fa-car me-2"></i> Add New Car
</h2>
@await Html.PartialAsync("Brand/_AddBrandPartial", new CarRental.ViewModels.BrandViewModel())



<link rel="stylesheet" href="~/css/AddCar.css" asp-append-version="true" />
<!-- Glassmorphism Card -->

<div class="card glass-card shadow-lg mx-auto" style="max-width: 700px;">
    <div class="card-body p-4">
        <form asp-action="AddCar" asp-controller="Admin" method="post">

            <!-- Brand -->
            <div class="form-group mb-3">
                <label asp-for="BrandID" class="form-label fw-semibold">Brand</label>
                <div class="d-flex align-items-center gap-2">
                    <select asp-for="BrandID" class="form-select stylish-input" asp-items="ViewBag.BrandList" required>
                        <option value="">-- Select Brand --</option>
                    </select>
                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#AddBrandModal">
                        <i class="bi bi-plus-square-dotted"></i>
                    </button>

                </div>
                <span asp-validation-for="BrandID" class="text-danger small"></span>
            </div>

            <!-- Car Name -->
            <div class="form-group mb-3">
                <label asp-for="CarName" class="form-label fw-semibold">Car Name</label>
                <input asp-for="CarName" class="form-control stylish-input" placeholder="Enter car name..." required/>
                <span asp-validation-for="CarName" class="text-danger small"></span>
            </div>

            <!-- Car Type & Fuel Type -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CarType" class="form-label fw-semibold">Car Type</label>
                    <select asp-for="CarType" class="form-select stylish-input" asp-items="ViewBag.CarType" required></select>
                    <span asp-validation-for="CarType" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="FuelType" class="form-label fw-semibold">Fuel Type</label>
                    <select asp-for="FuelType" class="form-select stylish-input" asp-items="ViewBag.FuelType" required></select>
                    <span asp-validation-for="FuelType" class="text-danger small"></span>
                </div>
            </div>

            <!-- Gear Type & Color -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="GearType" class="form-label fw-semibold">Gear Type</label>
                    <select asp-for="GearType" class="form-select stylish-input" asp-items="ViewBag.GearType" required></select>
                    <span asp-validation-for="GearType" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Color" class="form-label fw-semibold">Color</label>
                    <select asp-for="Color" class="form-select stylish-input" id="color-select" required>
                        <option value="">-- Select Color --</option>
                        <option value="White" style="background-color: white; color: black;">White</option>
                        <option value="Black" style="background-color: black; color: white;">Black</option>
                        <option value="Red" style="background-color: red; color: white;">Red</option>
                        <option value="Blue" style="background-color: blue; color: white;">Blue</option>
                        <option value="Silver" style="background-color: silver; color: black;">Silver</option>
                        <option value="Gray" style="background-color: gray; color: white;">Gray</option>
                        <option value="Green" style="background-color: green; color: white;">Green</option>
                        <option value="Other">Other</option>
                    </select>
                 @*    <input type="text" id="custom-color-input" class="form-control mt-2 stylish-input" placeholder="Enter new color" style="display: none;" />
                    <span asp-validation-for="Color" class="text-danger small"></span> *@
                </div>
            </div>

            
            <!-- Seats -->
            <div class="form-group mb-3">
                <label asp-for="No_of_Seats" class="form-label fw-semibold">No. of Seats</label>
                <input asp-for="No_of_Seats" class="form-control stylish-input" placeholder="e.g., 5" min="1" required />
                <span asp-validation-for="No_of_Seats" class="text-danger small"></span>
            </div>

            <!-- Rental Rate -->
            <div class="form-group mb-4">
                <label asp-for="RentalRate" class="form-label fw-semibold">Rental Rate</label>
                <input asp-for="RentalRate" class="form-control stylish-input"placeholder="e.g:- 50 per day" type="number" step="0.01" min="0.01" required />
                <span asp-validation-for="RentalRate" class="text-danger small"></span>
            </div>
            <!-- Submit Button -->
            <button type="submit" class="btn btn-gradient w-100 fw-bold" @(Model.CarID.HasValue ? "disabled" : "")>
                <i class="fas fa-plus-circle me-1"></i> Add Car
            </button>
        </form>
    </div>
</div>
    
<<div class="card glass-card shadow-lg mx-auto" style="max-width: 700px;">
    <div class="card-body p-4">
        <form asp-action="UploadCarData" asp-controller="Admin" method="post" enctype="multipart/form-data">
            <input type="hidden" name="CarID" value="@Model.CarID" />

            <!-- Image Upload -->
            <div class="form-group mb-3">
                <label for="ImageFiles">Upload Images</label>
                <input type="file" name="ImageFiles" multiple class="form-control" accept="image/*" @(Model.CarID.HasValue ? "" : "disabled") />
            </div>

            <!-- Unit Inputs -->
            <label>Enter Units (Plate Numbers)</label>
            <div id="units-container">
                <input type="text" name="Units" class="form-control mb-2" placeholder="Enter plate number" @(Model.CarID.HasValue ? "" : "disabled") />
            </div>

            <!-- Add More Units Button -->
            <button type="button" class="btn btn-sm btn-primary mb-3" id="add-unit-btn" @(Model.CarID.HasValue ? "" : "disabled")>
                <i class="bi bi-plus-square-dotted"></i> Add Another Unit
            </button>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-gradient w-100 fw-bold" @(Model.CarID.HasValue ? "" : "disabled")>
                <i class="fas fa-plus-circle me-1"></i> Upload Images & Units
            </button>
        </form>
    </div>
</div>

           


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/AddCar.js"></script> 
}


