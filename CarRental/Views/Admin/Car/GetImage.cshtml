@* @model CarRental.ViewModels.CarImagesViewModel

<link rel="stylesheet" href="~/css/imageForm.css" />

<div class="container-fluid">

    @if (Model.ImageDataList != null && Model.ImageDataList.Any())
    {
        <div class="row">
            @foreach (var imageData in Model.ImageDataList)
            {
                <div class="col-md-4 col-sm-6 mb-3">
                    <img src="@imageData" class="img-fluid rounded border shadow-sm" alt="Car Image" />
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No images available for this car.</p>
    }

    <!-- Upload Form -->
    <div class="mt-4">
        <form asp-action="AddImage" asp-controller="Admin" method="post" enctype="multipart/form-data">
