@model IEnumerable<CarRental.DTOs.CarDTO>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert">
        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <script>
        setTimeout(function () {
            var alert = bootstrap.Alert.getOrCreateInstance(document.getElementById('successAlert'));
            alert.close();
        }, 3000);
    </script>
}

@{
    ViewData["Title"] = "View Cars";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

@{
    int counter = 1;
}
<link rel="stylesheet" href="~/css/ViewCar.css" />


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Car List</h2>
    <a asp-action="AddCar" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i> Add New Car
    </a>
</div>

<div class="table-responsive rounded-3 overflow-hidden shadow-sm">
    <table class="table table-hover table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>No</th>
                <th>Car Name</th>
                <th>Brand</th>
                <th>Color</th>
                <th>Ratings</th>
                <th>Rental Rate</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No cars found.</td>
                </tr>
            }
            else
            {
                @foreach (var car in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@car.CarName</td>
                        <td>@car.Brand.BrandName</td>
                        <td>@car.Color</td>
                        <td>@car.Ratings</td>
                        <td>Rs. @car.RentalRate.ToString("N2")</td>
                        <td>
                            <a asp-action="UpdateCar" asp-route-id="@car.CarID" class="btn btn-sm btn-outline-warning me-1" title="Edit Car">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                           
                            <button type="button"
                                    class="btn btn-sm btn-outline-danger me-1"
                                    data-bs-toggle="modal"
                                    data-bs-target="#DeleteCarModal"
                                    data-carid="@car.CarID"
                                    data-carname="@car.CarName">
                                <i class="bi bi-trash3-fill"></i>
                            </button>

                            <a asp-action="ViewImageofCar" asp-route-CarID="@car.CarID" class="btn btn-sm btn-outline-success me-1" title="View Images">
                                <i class="bi bi-image-fill"></i>
                            </a>

                            <a asp-action="ViewUnitofCar" asp-route-CarID="@car.CarID" class="btn btn-sm btn-outline-primary" title="View Units">
                                <i class="bi bi-puzzle-fill"></i>
                            </a>
                        </td>
                    </tr>
                    counter++;
                }
            }
        </tbody>
    </table>
</div>

@* =============================================== Deleting Confirmation =================================================*@

<div class="modal fade" id="DeleteCarModal" tabindex="-1" aria-labelledby="DeleteCarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DeleteCarModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p>Are you sure you want to delete this Car <strong id="modal-carname">this car</strong>?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                <a id="confirmDeleteBtn" class="btn btn-danger">
                    Delete
                </a>
            </div>
        </div>
    </div>
</div>
<script>
    const deleteModal = document.getElementById('DeleteCarModal');

    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;

        const carId = button.getAttribute('data-carid');
        const carname = button.getAttribute('data-carname');

        const confirmBtn = document.getElementById('confirmDeleteBtn');
        confirmBtn.setAttribute('href', `/Admin/DeleteCar?id=${carId}`);

        const carnameText = document.getElementById('modal-carname');
        carnameText.textContent = carname;
    });
</script>


@section Scripts {

        <partial name="_ValidationScriptsPartial" />
        <script src="~/js/ImageForm.js"></script>
        <script src="~/js/ViewCar.js"></script>

}




