@model IEnumerable<CarRental.DTOs.BookingDTO>


@{
    ViewData["Title"] = "Active Rentals";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int counter = 1;
}

<h2 class="text-center mb-4">Active Rentals</h2>

<div class="table-responsive rounded-3 overflow-hidden shadow-sm">
    <table class="table table-hover table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>No</th>
                <th>Username</th>
                <th>Car Name</th>
                <th>Pickup</th>
                <th>Return</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@counter</td>
                    <td>@booking.Request.Username</td>
                    <td>@booking.Request.CarName</td>
                    <td>
                        <span class=" d-block">@booking.ActualPickupDate.ToString("yyyy-MM-dd")</span>
                        <small class="text-muted">@booking.ActualPickupTime.ToString("hh:mm tt")</small>

                    </td>
                    <td>
                        <span class=" d-block">@booking.Request.ReturnDate.ToString("yyyy-MM-dd")</span>
                        <small class="text-muted">@booking.Request.ReturnTime.ToString("hh:mm tt")</small>
                    </td>
                    <td>
                        <button type="button"
                                class="btn btn-success btn-sm px-4 booking-btn"
                                data-bs-toggle="modal"
                                data-bs-target="#bookingModal"
                                data-bookingid="@booking.BookingID"
                                data-username="@booking.Request.Username"
                                data-carname="@booking.Request.CarName"                          
                                data-pickupdate="@booking.ActualPickupDate"
                                data-returndate=@DateOnly.FromDateTime(DateTime.Now)
                                data-rentalrate="@booking.Request.RentalRate"
                                data-carid ="@booking.Request.CarID"
                                data-userid ="@booking.Request.UserID"
                                data-unit="@booking.Unit">
                            Returned
                        </button>

                        @if (booking.Request.ReturnDate < DateOnly.FromDateTime(DateTime.Now))
                        {
                            <a asp-action="ReturnDelay" asp-route-UserID="@booking.Request.UserID" asp-route-CarID="@booking.Request.CarID" class="btn btn-sm btn-warning me-3">
                                <i class="bi bi-bell-fill"></i> Notify
                            </a>
                        }
                    </td>
                </tr>
                counter++;
            }
        </tbody>
    </table>
</div>
<link rel="stylesheet" href="~/css/customer.css" />
<!-- Modal HTML -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-lg border-0">
            <div class="modal-body p-5 bg-white">
                <h3 class="text-center mb-4">Return Summary</h3>

                <form asp-action="Returned" asp-controller="Admin" method="post">
                    <input type="hidden" name="BookingID" id="BookingID" />
                    <input type="hidden" name="CarID" id="CarID" />
                    <input type="hidden" name="UserID" id="UserID" />
                    


                    <div class="mb-3">
                        <label for="Username" class="form-label">Username</label>
                        <input type="text" name="Username" id="Username" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label for="CarName" class="form-label">Car Name</label>
                        <input type="text" name="CarName" id="CarName" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label for="Unit" class="form-label">Unit</label>
                        <input type="text" name="Unit" id="Unit" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label for="PickupDate" class="form-label">Pickup Date</label>
                        <input type="text" name="PickupDate" id="PickupDate" class="form-control" readonly />
                    </div>

     
                    <div class="mb-3">
                        <label for="ReturnDate" class="form-label">Return Date</label>
                        <input type="text" name="ReturnDate" id="ReturnDate" class="form-control" readonly />
                    </div>

         
                    <select name="Condition" id="Condition" class="form-select" required>
                        <option value="">-- Select Condition --</option>
                        @foreach (var item in (SelectList)ViewBag.Condition)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>

       
                    <div class="mb-3">
                        <label for="RentalAmount" class="form-label">Rental amount (LKR)</label>
                        <input type="text" name="RentalAmount" id="RentalAmount" class="form-control" readonly />
                    </div>

                    
                    <div class="mb-3">
                        <label for="AdditionalCharges" class="form-label">Additional Charges (LKR)</label>
                        <input type="number" step="1" min="0" value="0.00" name="AdditionalCharges" id="AdditionalCharges" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label for="Discount" class="form-label">Discount (LKR)</label>
                        <input type="number" step="1" min="0" value="0.00" name="Discount" id="Discount" class="form-control" />
                    </div>



                    <!-- Add more fields as needed (e.g. rental date, user name, etc.) -->

                    <button type="submit" class="btn btn-success w-100 mt-3">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/Booking.js"></script>

