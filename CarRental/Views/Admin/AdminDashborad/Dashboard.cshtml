@model CarRental.ViewModels.AdminDashboardViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Dashboard";
}

<style>
    .dashboard-card {
        border-radius: 1rem; /* rounded corners */
        transition: all 0.3s ease-in-out;
        cursor: pointer;
    }

        .dashboard-card:hover {
            transform: translateY(-8px) scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25) !important;
        }
</style>

<div class="container mt-4">
    <h1 class="mb-4 fw-bold">📊 Admin Dashboard</h1>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary shadow-sm dashboard-card text-center">
                <div class="card-body">
                    <h5 class="fw-semibold">Total Requests</h5>
                    <h2 class="display-6 fw-bold">@Model.TotalRequests</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success shadow-sm dashboard-card text-center">
                <div class="card-body">
                    <h5 class="fw-semibold">Total Bookings</h5>
                    <h2 class="display-6 fw-bold">@Model.TotalBookings</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-dark bg-warning shadow-sm dashboard-card text-center">
                <div class="card-body">
                    <h5 class="fw-semibold">Picked Up</h5>
                    <h2 class="display-6 fw-bold">@Model.PickedBookings</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-info shadow-sm dashboard-card text-center">
                <div class="card-body">
                    <h5 class="fw-semibold">Returned</h5>
                    <h2 class="display-6 fw-bold">@Model.ReturnedBookings</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-dark shadow-sm dashboard-card text-center">
                <div class="card-body">
                    <h5 class="fw-semibold">New Users This Month</h5>
                    <h2 class="display-6 fw-bold">@Model.NewUsersThisMonth</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-secondary shadow-sm dashboard-card text-center">
                <div class="card-body">
                    <h5 class="fw-semibold">Active Customers</h5>
                    <h2 class="display-6 fw-bold">@Model.ActiveCustomers</h2>
                </div>
            </div>
        </div>
    </div>
</div>
