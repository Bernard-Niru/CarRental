@model IEnumerable<CarRental.DTOs.BrandDTO>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@{
    int counter = 1;
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>No</th>
            <th>Brand Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@brand.BrandName</td>
                <td>
                    <a asp-action="UpdateBrand" asp-route-id="@brand.BrandID" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-fill"></i> 
                    </a>

                    <a asp-action="DeleteBrand" asp-route-id="@brand.BrandID" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                </td>
            </tr>
            counter++;
        }
    </tbody>
</table>
