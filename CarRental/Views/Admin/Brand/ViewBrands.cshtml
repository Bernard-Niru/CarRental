@model IEnumerable<CarRental.DTOs.BrandDTO>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@{
    ViewData["Title"] = "View Brands";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    int counter = 1;
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>No</th>
            <th>Brand Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@brand.BrandName</td>
                <td>
                    <a asp-action="UpdateBrand" asp-route-id="@brand.BrandID" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-fill"></i> 
                    </a>

                    @* <a asp-action="DeleteBrand" asp-route-id="@brand.BrandID" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash3-fill"></i>
                    </a> *@
                    <form asp-action="DeleteBrand" asp-controller="Admin" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this brand?');"
                          style="display:inline;">
                        <input type="hidden" name="id" value="@brand.BrandID" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash3-fill"></i>
                        </button>
                    </form>

                </td>
            </tr>
            counter++;
        }
    </tbody>
</table>
