@model IEnumerable<CarRental.DTOs.BrandDTO>

@{
    int counter = 1;
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>counter</th>
            <th>Brand Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@brand.BrandName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@brand.BrandID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@brand.BrandID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            counter++;
        }
    </tbody>
</table>
