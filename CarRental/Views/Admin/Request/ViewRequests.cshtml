@model CarRental.ViewModels.UnitSelectionViewModel

@{
    int counter = 1;
    ViewData["Title"] = "Requests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Requests</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>No</th>
            <th>Username</th>
            <th>Car Name</th>
            <th style="width: 20%;">Pickup</th>
            <th style="width: 20%;">Return</th>
            <th>Accept / Reject</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model.car)
        {
            <tr>
                <td>@counter</td>
                <td>@req.Username</td>
                <td>@req.CarName</td>
                <td>@(req.PickupDate.ToString("yyyy-MM-dd") + " : " + req.PickupTime.ToString("hh:mm tt"))</td>
                <td>@(req.ReturnDate.ToString("yyyy-MM-dd") + " : " + req.ReturnTime.ToString("hh:mm tt"))</td>
                <td>
                    @* Uncomment if needed
                    @* <a asp-action="AcceptRequest" asp-route-id="@req.RequestID" class="btn btn-sm btn-success me-3">
                         <i class="bi bi-check-lg"></i>
                       </a> *@
@*                     <input type="hidden" name="CarId" value="@req.CarID" />
                    <input type="hidden" name="RequestId" value="@req.RequestID" /> *@
                    
                    <a asp-action="RejectRequest" asp-route-id="@req.RequestID" class="btn btn-sm btn-danger">
                        <i class="bi bi-x-lg"></i>                        
                    </a>
                    <a asp-action="Numberplat"
                       asp-route-requestId="@req.RequestID"
                       asp-route-carId="@req.CarID"
                       class="btn btn-sm btn-success me-2">
                        <i class="bi bi-check-lg"></i> Accept
                    </a>

                </td>
            </tr>
             counter++; 
        }
    </tbody>
</table>

<div class="modal fade" id="addnumberplat" tabindex="-1" aria-labelledby="addnumberplatLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-lg border-0">
            <div class="modal-body p-5 bg-white">
                <h3 class="text-center mb-4">Request Car</h3>

                <form asp-action="Numberplat" asp-controller="Admin" method="post">
                    <div class="mb-3">
                        <label asp-for="PlateNumber" class="form-label"></label>
                        <select asp-for="PlateNumber" asp-items="ViewBag.Unit" class="form-select stylish-input" required>
                            <option value="">Select Plate Number</option>
                        </select>
                        <span asp-validation-for="PlateNumber" class="text-danger"></span>
                    </div>

                    <input asp-for="RequestId" type="hidden" />

                    <button type="submit" class="btn btn-primary w-100">Confirm</button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const platenumber = document.getElementById("addnumberplat");
            const message = '@TempData["ErrorMessage"]'; 
            if (message) {
                const modal = new bootstrap.Modal(platenumber);
                modal.show();
            }
        });
    </script>
}

