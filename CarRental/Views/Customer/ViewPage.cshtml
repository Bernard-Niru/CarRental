@model IEnumerable<CarRental.DTOs.CarDTO>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Car Rentals</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Minimal custom styles for image sizing */
        .car-image {
            height: 250px;
            object-fit: cover;
            width: 100%;
            border-radius: 0.375rem; /* Bootstrap rounded */
            user-select: none;
        }
    </style>
</head>
<body>
    <div class="container py-4">
        @if (Model.Any())
        {
            <div class="row g-10">
                @foreach (var car in Model)
                {
                    var carouselId = $"carousel_{car.CarID}";

                    <div class="col-sm-6 col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div id="@carouselId" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    @for (int i = 0; i < car.ImageDataList.Count; i++)
                                    {
                                        <button type="button"
                                                data-bs-target="#@carouselId"
                                                data-bs-slide-to="@i"
                                                class="@(i == 0 ? "active" : "")"
                                                aria-current="@(i == 0 ? "true" : "false")"
                                                aria-label="Slide @(i + 1)">
                                        </button>
                                    }
                                </div>

                                <div class="carousel-inner">
                                    @for (int i = 0; i < car.ImageDataList.Count; i++)
                                    {
                                        var imgSrc = car.ImageDataList[i];
                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                            <img src="@imgSrc" class="d-block car-image" alt="Image of @car.BrandName @car.CarName - Slide @(i + 1)" />
                                        </div>
                                    }
                                </div>

                                <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                            <div class="d-flex justify-content-center flex-wrap gap-2 mb-2">

                                <span class="badge bg-secondary text-light">
                                    @car.CarType<i class="bi bi-car-front-fill" style="margin-left: 4px;"></i>
                                </span>

                                <span class="badge bg-secondary text-light">
                                    @car.FuelType<i class="bi bi-fuel-pump-diesel-fill" style="margin-left: 4px;"></i>
                                </span>

                                <span class="badge bg-secondary text-light">
                                    @car.GearType<i class="bi bi-gear-fill" style="margin-left: 4px;"></i>
                                </span>

                                <span class="badge bg-secondary text-light">
                                    @car.Ratings <i class="bi bi-star-fill" style="margin-left: 4px;"></i>
                                </span>

                                <span class="badge bg-secondary text-light">
                                    @car.No_of_Seats <i class="bi bi-people-fill" style="margin-left: 4px;"></i>
                                </span>

                                <span class="badge"
                                      style="background-color: @car.Color; width: 20px; height: 20px; border-radius: 50%; border: 1px solid black; display: inline-block;">
                                </span>

                            </div>

                            <div class="card-body text-center d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title mb-1">@car.BrandName</h5>
                                    <h6 class="card-subtitle text-muted mb-2">@car.CarName</h6>
                                </div>
                                <div>
                                    <p class="text-success fw-bold fs-5 mb-3"> Rs @car.RentalRate.ToString("N0") /Day</p>
                                    <button type="button" class="btn btn-success btn-sm px-4" data-bs-toggle="modal" data-bs-target="#addCarModal">
                                        Request
                                    </button>


                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted">No cars available at the moment.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
