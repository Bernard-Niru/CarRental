@model CarRental.ViewModels.ProfileViewModel
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Profile";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-success">@TempData["Error"]</div>
}

<div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center bg-primary text-white p-4 rounded shadow-sm mb-4">
        <h2 class="mb-0">Customer Profile</h2>
        <a type="button" class="btn btn-outline-light fw-semibold" data-bs-toggle="modal" data-bs-target="#registerModal">
            <i class="bi bi-pencil-square me-2"></i> Edit Profile
        </a>
    </div>

        <div class="card border-0 shadow-lg p-4">
        <div class="row g-4 align-items-center">

            <div class="col-md-4 text-center">
                <img id="profileImage"
                     src="~/image/vector-sign-of-user-icon.jpg"
                     class="rounded-circle shadow-sm"
                     style="width: 160px; height: 160px; object-fit: cover;"
                     alt="Profile Picture" />

                <input type="file" id="fileInput" accept="image/*" style="display: none;" onchange="uploadProfilePicture(this)" />

                <button class="btn btn-primary mt-3" onclick="document.getElementById('fileInput').click();">
                    Change Picture
                </button>
            </div>

            
            <div class="col-md-8">
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold text-muted">Name:</div>
                    <div class="col-sm-8">@Model.Name</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold text-muted">Email Address:</div>
                    <div class="col-sm-8">@Model.Email</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold text-muted">Username:</div>
                    <div class="col-sm-8">@Model.UserName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold text-muted">Role:</div>
                    <div class="col-sm-8">@Model.Role</div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content custom-modal">
            <div class="wrapper">
                <form asp-action="Update" asp-controller="Customer" method="post">
                    <div id="RegisterError" class="alert alert-danger" style="display:none;"></div>
                    <h2>Register</h2>

                    <div class="input-field">
                        <input asp-for="Name" type="text" required />
                        <label asp-for="Name">Enter Your Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="input-field">
                        <input asp-for="Email" type="email" required />
                        <label asp-for="Email">Enter Your Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="input-field">
                        <input asp-for="UserName" type="text" required />
                        <label asp-for="UserName">Enter Your UserName</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <input asp-for="OldPassword" type="password" required />
                        <label asp-for="OldPassword">Enter Your OldPassword</label>
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>

                    <div class="input-field">
                        <input asp-for="NewPassword" type="password" required />
                        <label asp-for="NewPassword">Enter Your NewPassword</label>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="input-field">
                        <input asp-for="ConfirmPassword" type="password" required />
                        <label asp-for="ConfirmPassword">Re Enter Your Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    @* <div class="mb-3">
                        <label class="form-label">Old Password</label>
                        <input type="password" name="OldPassword" class="form-control"  />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">New Password</label>
                        <input type="password" name="NewPassword" class="form-control"  />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input type="password" name="ConfirmPassword" class="form-control" />
                    </div> *@
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/AddProfile.js"></script> 



































































<h1>.</h1>

@{
    int counter = 1;
}

<div class="table-responsive shadow rounded-4 overflow-hidden mx-auto" style="max-width: 900px;">
    <table class="table table-hover table-striped table-bordered align-middle mb-0">
        <caption class="table-caption">Booking History</caption>
        <thead class="table-primary">
            <tr class="text-center">
                <th scope="col">No</th>
                <th scope="col">Car Name</th>
                <th scope="col" style="width: 25%;">Pickup Date & Time</th>
                <th scope="col" style="width: 25%;">Return Date & Time</th>
                <th scope="col">Rental Amount</th>
            </tr>
        </thead>


        <tbody>
            @if (Model.bookings != null && Model.bookings.Any())
            {
                foreach (var booking in Model.bookings)
                {
                    <tr class="text-center">
                        <td>@counter</td>
                        <td class="fw-semibold">@booking.Request.CarName</td>
                        <td>
                            <span class="d-block">@booking.ActualPickupDate.ToString("yyyy-MM-dd")</span>
                            <small class="text-muted">@booking.ActualPickupTime.ToString("hh:mm tt")</small>
                        </td>
                        <td>
                            <span class="d-block">@booking.ActualReturnDate.ToString("yyyy-MM-dd")</span>
                            <small class="text-muted">@booking.ActualReturnTime.ToString("hh:mm tt")</small>
                        </td>
                        <td class="fw-bold text-success"> @booking.RentalAmount</td>
                    </tr>

                    counter++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">No booking history found.</td>
                </tr>
            }
        </tbody>

    </table>
</div>




